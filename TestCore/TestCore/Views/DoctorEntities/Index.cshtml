@model IEnumerable<DAL.Entity.DoctorEntity>

@{
    ViewData["Title"] = "Index";
}

<style>
    #rowMain{
        border: solid 1px black;
            width:auto;
            height:auto;
    }

</style>

<h2>Index</h2>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.3.0/lodash.js"></script>
<script type="text/javascript">

 
    $(document).ready(function () {
        //alert("fkjdskjfas");

        $('#CreateAppoint').click(function () {
            //alert("fkjdskjfas");

            $.ajax({
                type: "GET",
                url: '@Url.Action("Contact", "Home")',
                //dataType: "json",
                //data: { "Text": Data },

                success: function () {
                    window.location.href = "/Home/Contact";

                },
                error: function (xhr, status, p3) {
                    alert(status);
                }
            });
        });

        $('#GetData').click(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SendData", "Home")',
                success: function (data)
                {
                    $('#result').append(/*data.Name + data.Id*/ "fdfjasdgjagdj");
                }
            });
        });


    });

</script>
<p>
    <a asp-action="Create">Create New</a>
</p>
@{
    foreach (var item in Model)
    {
        <div class="row" style="background-color:lightgray; border-radius:10px; width:auto;height:auto;" id="rowMain">
            <div class="col-lg-2">
                <img src="https://thecliparts.com/wp-content/uploads/2016/05/doctor-clip-art-free.png" width="150px" height="200px"/>
            </div>
            <div class="col-lg-8">
                <div class="row" style="padding:10px">
                    <p style="color:black; font-style:italic; font-size:25px;">@item.FirstName @item.LastName</p>
                </div>
                <div class="row">
                    <p style="color:black; font-style:italic; font-size:15px;">Спеціальність: @item.JobTitle</p>
                </div>
                <div class="row">
                    <p style="color:black; font-style:italic; font-size:15px;">Опис роботи: @item.Information</p>
                </div>
                <div class="row">
                    <p style="color:black; font-style:italic; font-size:15px;">Розташування: @item.Location</p>
                </div>
                <div class="row">
                    <input type="button" id="CreateAppoint" value="Create" >
                </div>
            </div>

        </div>
        <p></p>
    }
}



